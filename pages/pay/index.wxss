/* pages/pay/index.wxss */
.cart_item_right {
  padding: 30rpx;
  position: relative;
  margin-top: 30rpx;
}
.cart_item_right .count_group {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  min-width: 100rpx;
}
.cart_item_right .count_group .count_group_number::before {
  content: "X";
  font-size: 40%;
}
.bottom {
  width: 750rpx;
  height: 82rpx;
  background-color: #fff;
  border-top: 1px solid var(--borderColor);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
}
.bottom_left {
  display: flex;
  align-items: center;
}
.bottom_group {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.bottom_group_text {
  color: #666;
  font-size: 80%;
}
.bottom_group_price {
  color: var(--pimaryColor);
}
.bottom_group_price::before {
  content: "Â¥";
  font-size: 80%;
}
.bottom_toPay {
  min-width: 150rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  height: 52rpx;
  border-radius: 30rpx;
  color: #fff;
  background-color: var(--pimaryColor);
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottom_toPay.disabled {
  background-color: #363634;
}
