/* pages/goods_detail/index.wxss */
.slider {
  width: 100%;
}
.slider .slider_image {
  width: 750rpx;
  height: 750rpx;
  color: black;
}
.information {
  margin: 30rpx;
}
.information .information_Price {
  color: #ff0000;
}
.information .information_Price {
  float: left;
}
.information .information_right,
.information .icon {
  margin-left: 40rpx;
  font-size: 23px;
  float: right;
}
.information .information_in {
  float: left;
  font-size: 36rpx;
}
.box {
  padding: 30rpx;
}
.box_dibu {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}
.box_dibu .bottom_list {
  background-color: #ffffff;
  z-index: 1;
  display: flex;
  height: 94rpx;
  justify-content: space-around;
}
.box_dibu .bottom_list .gwc,
.box_dibu .bottom_list .purchase {
  margin-top: 15rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  border-radius: 60rpx;
  width: 196rpx;
  height: 60rpx;
  color: #ffffff;
  background-color: #fcaa23;
}
.box_dibu .bottom_list .purchase {
  color: #000;
  background-color: #ea4350;
}
.box_dibu .bottom_list .icon_forn {
  font-size: 10px;
}
.box_dibu .bottom_list .bottom_list_icon {
  margin-top: 10rpx;
  position: relative;
  text-align: center;
}
.box_dibu .bottom_list .bottom_list_icon .bottom_bar {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
}
.my_img {
  display: block;
}
